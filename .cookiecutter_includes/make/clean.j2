{% macro clean(
    jekyll_enabled,
    sphinx_enabled
) -%}
# --------------------------------------------------
# ðŸ§¹ Clean artifacts
# --------------------------------------------------
clean-docs:
	$(AT)echo "ðŸ§¹ Cleaning documentation artifacts..."
{% if sphinx_enabled %}
	$(AT)$(MAKE) -C $(SPHINX_DIR) clean
{% endif %}
{% if jekyll_enabled %}
	$(AT)$(MAKE) -C $(JEKYLL_DIR) clean
{% endif %}
	$(AT)echo "âœ… Cleaned documentation artifacts..."

clean-build:
	$(AT)echo "ðŸ§¹ Cleaning build artifacts..."
	$(AT)rm -rf build dist *.egg-info
	$(AT)find $(SRC_DIR) $(TESTS_DIR) -name "__pycache__" -type d -exec rm -rf {} +
	$(AT)-[ -d "$(VENV_DIR)" ] && rm -r $(VENV_DIR)
	$(AT)echo "ðŸ§¹ Cleaned build artifacts."

clean: clean-docs clean-build
{%- endmacro -%}
