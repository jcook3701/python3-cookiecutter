{% import '.cookiecutter_includes/license/license-data.j2' as lics %}

{% macro create(
    license,
    copyright
) %}
  {#
    Generates a license based on the selected SPDX identifier.

    This macro maps a license string to its corresponding full
    text stored in the `lics` data object.

    Args:
      license (str): The SPDX identifier (e.g., 'MIT', 'BSD-3-Clause').
      copyright (str): The copyright holder line (e.g., '2026 Jane Doe').

    Returns:
        str: The formatted license text as Markdown.
  #}
  {{- lics.get_license(license, copyright) -}}
{% endmacro %}
